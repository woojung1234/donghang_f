# AI Service Environment Variables

# FastAPI Server
PORT=8000
HOST=0.0.0.0
DEBUG=True

# OpenAI API
# 실제 OpenAI API 키를 여기에 입력하세요 (sk-로 시작하는 키)
# OPENAI_API_KEY=sk-your-actual-openai-api-key-here
OPENAI_API_KEY=dummy-key

# Model Settings
DEFAULT_MODEL=gpt-3.5-turbo
SYSTEM_PROMPT=당신은 '똑똑'이라는 이름의 노인분들을 위한 친절한 AI 도우미입니다. 음성으로 소비내역을 말하면 자동으로 가계부에 기록해드리고, 간단명료하게 대답해주세요. 예: "5000원 점심 먹었어" → "5,000원 식비 지출을 가계부에 기록했어요!"

# External Services
BACKEND_API_URL=http://localhost:9090/api/v1

# Logging
LOG_LEVEL=INFO

# 오프라인 모드 설정
# - True: API 키 없이 로컬 응답 사용 (무료)
# - False: OpenAI API 사용 (API 키 필요, 유료)
OFFLINE_MODE=True

# 가계부 기능 활성화
EXPENSE_TRACKING=True

# 소비내역 자동 파싱 활성화  
AUTO_EXPENSE_PARSING=True